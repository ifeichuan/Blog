---
import Base from "../layouts/Base.astro";
import About from "./about.astro";
import Intro from "../components/Intro.astro";
import Prism from "@/components/Prism";
import SplitText from "@/components/SplitText";
import TextType from "@/components/TextType";
---

<div class="noise"></div>
<Base>
  <Intro>
    <div
      class="index w-screen flex bg-transparent justify-between relative flex-col h-full overflow-scroll dark:text-white/40"
    >
      <div
        class="banner h-screen w-screen absolute left-0 z-0 p-10 flex flex-col"
      >
        <SplitText
          text="Feichuans"
          client:load
          className="text-[16rem] font-serif "
        />
        <SplitText
          text="A newbie Frontend developer  who loves designing and coding."
          client:only="react"
          className="text-[4rem]  font-serif text-center   px-10"
          delay={20}
        />
        <TextType
          text="Welcome to My Blog"
          client:only="react"
          className="text-[2rem] font-mono text-center mt-10"
          textColors={["black"]}
        />
        <TextType
          text="Scroll~"
          client:only="react"
          className="text-[1rem] font-mono text-center mt-40"
          textColors={["black"]}
        />
      </div>
      <div
        class="z-[1] h-full top-[100%] absolute w-screen overflow-x-hidden overflow-y-scroll backdrop-blur-2xl"
      >
        <div class="h-80 w-20 mix-blend-difference text-black dark:text-white">
          <!-- <BlogList /> -->
        </div>
      </div>
    </div>
  </Intro>
</Base>

<script>
  import gsap from "gsap";
</script>

<style>
  .index {
    background-blend-mode: overlay;
    background:
      url("../assets/bigNoisy.png") repeat,
      url("../assets/mesh.png") no-repeat;
    background-size: 10%, cover;
    /* 背景变暗 */

    background-attachment: fixed;
  }
  .noise {
    position: fixed;
    pointer-events: none;
    width: 100dvw;
    height: 100dvh;
    background: url("../assets/noiseFilter2.jpg");
    /* background-blend-mode: overlay; */
    background-attachment: fixed;
    z-index: 99999;
    opacity: 0.05;
  }
</style>
